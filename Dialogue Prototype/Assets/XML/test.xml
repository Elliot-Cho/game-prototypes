      <party />
      <vars />
      <dialogueOptions>
        <text id="001">Hello, stranger.</text>
        <text id="002">Hey there, wayfinder.</text>
        <text id="003">Hi there.</text>
      </dialogueOptions>
    </conversation>
    <conversation>
      <speaker>Bob</speaker>
      <relationsMin>50</relationsMin>
      <relationsMax>75</relationsMax>
